{
  "info": {
    "name": "Ministerio Público API",
    "description": "Colección de endpoints para el sistema de gestión de casos",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api"
    },
    {
      "key": "token",
      "value": ""
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('token', jsonData.token);",
                  "    pm.test('Token received', function () {",
                  "        pm.expect(jsonData.token).to.not.be.undefined;",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"username\": \"admin\",\n    \"password\": \"secret\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Casos",
      "item": [
        {
          "name": "Obtener todos los casos",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/casos",
              "host": ["{{baseUrl}}"],
              "path": ["casos"]
            }
          }
        },
        {
          "name": "Obtener caso por ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/casos/1",
              "host": ["{{baseUrl}}"],
              "path": ["casos", "1"]
            }
          }
        },
        {
          "name": "Crear nuevo caso",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"numero_caso\": \"CASO-2024-001\",\n    \"descripcion\": \"Descripción del caso de prueba\",\n    \"estado\": \"pendiente\",\n    \"id_fiscal_asignado\": 1,\n    \"id_fiscalia\": 1\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/casos",
              "host": ["{{baseUrl}}"],
              "path": ["casos"]
            }
          }
        },
        {
          "name": "Actualizar caso",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"numero_caso\": \"CASO-2024-001-UPD\",\n    \"descripcion\": \"Descripción actualizada\",\n    \"estado\": \"en_proceso\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/casos/1",
              "host": ["{{baseUrl}}"],
              "path": ["casos", "1"]
            }
          }
        },
        {
          "name": "Reasignar caso",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"id_fiscal_nuevo\": 2\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/casos/1/reasignar",
              "host": ["{{baseUrl}}"],
              "path": ["casos", "1", "reasignar"]
            }
          }
        },
        {
          "name": "Obtener historial del caso",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/casos/1/historial",
              "host": ["{{baseUrl}}"],
              "path": ["casos", "1", "historial"]
            }
          }
        },
        {
          "name": "Eliminar caso",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/casos/1",
              "host": ["{{baseUrl}}"],
              "path": ["casos", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Fiscales",
      "item": [
        {
          "name": "Obtener todos los fiscales",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/fiscales",
              "host": ["{{baseUrl}}"],
              "path": ["fiscales"]
            }
          }
        }
      ]
    },
    {
      "name": "Fiscalías",
      "item": [
        {
          "name": "Obtener todas las fiscalías",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/fiscalias",
              "host": ["{{baseUrl}}"],
              "path": ["fiscalias"]
            }
          }
        }
      ]
    },
    {
      "name": "Logs",
      "item": [
        {
          "name": "Obtener logs de reasignación",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/logs/reasignacion",
              "host": ["{{baseUrl}}"],
              "path": ["logs", "reasignacion"]
            }
          }
        }
      ]
    },
    {
      "name": "Informes",
      "item": [
        {
          "name": "Obtener informe de casos",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/informes/casos",
              "host": ["{{baseUrl}}"],
              "path": ["informes", "casos"]
            }
          }
        }
      ]
    }
  ]
}